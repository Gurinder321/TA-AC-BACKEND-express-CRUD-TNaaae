<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>List of books</h1>
    <a href="/books/new">Add Books</a>

    <% books.forEach(book => { %>

    <section>
      <div>
        <h2><%= book.title %></h2>
        <p><%= book.description.substr(0, 200) + "..." %></p>
        <a href="/books/<%= book._id %>">
          <button>Show</button>
        </a>
      </div>
    </section>

    <% }) %>
  </body>
</html>
