<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>List of users</h1>
    <a href="/users/new">Add Users</a>

    <% users.forEach(user => { %>

    <section>
      <div>
        <h2><%= user.name %></h2>
        <p><%= user.description.substr(0, 200) + "..." %></p>
        <a href="/users/<%= user._id %>">
          <button>Show</button>
        </a>
      </div>
    </section>

    <% }) %>
  </body>
</html>
